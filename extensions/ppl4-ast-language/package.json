{
    "name": "ppl4-ast-lang",
    "displayName": "PPL4",
    "description": "PPL4 language syntax highlighting support",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ast",
                "aliases": [
                    "ast"
                ],
                "extensions": [
                    ".ast"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ast",
                "scopeName": "source.ast",
                "path": "./syntaxes/ast.tmLanguage.json"
            }
        ]
    }
}
