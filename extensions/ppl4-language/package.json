{
    "name": "ppl4-lang",
    "displayName": "PPL4",
    "description": "PPL4 language syntax highlighting support",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ppl4",
                "aliases": [
                    "PPL4",
                    "ppl4"
                ],
                "extensions": [
                    ".p4"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ppl4",
                "scopeName": "source.ppl4",
                "path": "./syntaxes/ppl4.tmLanguage.json"
            }
        ]
    }
}
